<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.cbcradio" name="CBC Radio" version="1.0.0beta" provider-name="ihemingway">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">CBC Radio</summary>
        <license>GNU General Public License, v2</license>
        <description lang="en">Add-on for streaming CBC Radio and CBC Radio 2 stations.</description>
        <platform>all</platform>
        <source>https://github.com/ihemingway/plugin.audio.cbcradio</source>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <banner>resources/banner.jpg</banner>
        </assets>
    </extension>
</addon>